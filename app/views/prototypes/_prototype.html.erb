<div class="card">
  <% if prototype.image.attached? %>
    <%= link_to prototype_path(prototype.id) do %>
      <%= image_tag prototype.image, class: 'prototype-image' %>
    <% end %>
  <% end %>
  <div class="card__body">
    <%= link_to prototype.title, class: :card__title%>
    <p class="card__summary">
      <%= prototype.catch_copy %>
    </p>
    <a href="/users/<%= prototype.user.id %>">
    <%= link_to "by #{prototype.user.username}", user_path(prototype.user), class: :card__user %>
  </div>
</div>